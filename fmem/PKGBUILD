# Maintainer: spezialk 

# All my PKGBUILDS are on my github

pkgname=fmem
pkgver=1.6.0
pkgrel=1
arch=('x86_64')
pkgdesc='Linux Kernel Module designed to help analyze volatile memory in the linux kernel '
url='https://github.com/NateBrune/fmem'
license=('GPL-2.0-only')
depends=('linux-headers' 'linux')
makedepends=('gcc' 'make' 'git' 'zstd')
source=("git+https://github.com/NateBrune/$pkgname.git")
sha512sums=('SKIP')

prepare(){
	cd $pkgname  
	pwd	
	patch -Np1 -i  ../../Kernel_6_4.patch
}


build(){
	cd $pkgname
	make	
	#currently the images dont get compressed since its not clear from docs why you should do it. and where to place them 
	#zstd ./fmem.ko
}

package(){
	_kernver=$(</usr/src/linux/version)	
	cd $pkgname	
	install -Dvt "$pkgdir/usr/lib/modules/$_kernver/updates" -m0644 fmem.ko
		
}
